{
  "name": "SAMPLE_NAME",
  "version": "0.1",
  "manifest_version" : 2,
  "description": "SAMPLE_DESCRIPTION",
  "content_scripts": [
  {
    "matches": ["http://*/*"],
    "js": ["oauth2_inject.js"]
  }
  ],

  "browser_action": {
    "default_icon": "icon2.png",
    "default_popup": "popup.html"
    },

  "permissions": ["http://*.com/", "https://*.com/", "tabs", "http://localhost:3000/", "https://accounts.google.com/o/oauth2/token", "https://www.googleapis.com/oauth2/v1/userinfo"],
    "optional_permissions": [ "tabs"]
}
