{
  "name": "My Recipe Box",
  "version": "0.1",
  "manifest_version" : 2,
  "description": "An online recipe organizer that allows you to share your recipe folders with friends!",
  "content_scripts": [
  // {
  //   "matches": ["http://www.google.com/robots.txt*"],
  //   "js": ["oauth2_inject.js"],
  //   "run_at": "document_start"
  // },
  {
    "matches": ["http://www.google.com/robots.txt"],
    "js": ["injection.js"],
    "run_at": "document_start"
  },
  {
    "matches": ["http://*/*"],
    "js": ["jquery.js"]
  }
  ],

  "browser_action": {
    "default_icon": "icon2.png",
    "default_popup": "popup.html"
    },

  "permissions": ["http://*.com/", "https://docs.google.com/feeds/*", "https://*.com/", "tabs", "http://localhost:3000/", "https://accounts.google.com/o/oauth2/token", "https://www.googleapis.com/oauth2/v1/userinfo", "https://www.googleapis.com/auth/userinfo.profile", "http://myrecipebox.herokuapp.com/",
  "https://www.google.com/accounts/OAuthGetRequestToken",
  "https://www.google.com/accounts/OAuthAuthorizeToken",
  "https://www.google.com/accounts/OAuthGetAccessToken"],
    "optional_permissions": [ "tabs"]
}
